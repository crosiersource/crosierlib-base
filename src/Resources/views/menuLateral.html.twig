<div class="sidebar">
    <nav class="sidebar-nav">
        <ul class="nav">

            {% for ent in menu %}


                {% if ent.tipo == 'ENT' %}
                    <li class="nav-item" style="{{ ent.cssStyle != null ? ent.cssStyle : '' }};">
                        <a class="nav-link" href="{{ ent.url is defined ? ent.url : '' }}">
                            <i class="nav-icon {{ ent.icon }}"></i>{{ ent.label }}</a></li>

                {% elseif ent.tipo == 'hr' %}
                    <li class="nav-item" style="height: 10px; background-color: white">
                        <hr/>
                    </li>

                {% elseif ent.tipo == 'LABEL' %}
                    <li class="nav-title">{{ filho.label }}</li>

                {% elseif ent.tipo == 'DROPDOWN' %}
                    <li class="nav-item nav-dropdown" style="{{ ent.cssStyle != null ? ent.cssStyle : '' }};">
                        <a class="nav-link nav-dropdown-toggle" href="#">
                            <i class="nav-icon {{ ent.icon }}"></i>
                            {{ ent.label }}
                        </a>

                        {% if ent.filhos is defined %}
                            <ul class="nav-dropdown-items" style="background-color: black">

                                {% for filho in ent.filhos %}

                                    {% if filho.tipo == 'ENT' %}
                                        <li class="nav-item"
                                            style="{{ filho.cssStyle != null ? filho.cssStyle : '' }};">
                                            <a class="nav-link"
                                               href="{{ filho.url is defined ? filho.url : '' }}">
                                                <i class="nav-icon {{ filho.icon }}"></i>{{ filho.label }}</a></li>

                                    {% elseif filho.tipo == 'hr' %}
                                        <li class="nav-item" style="height: 10px; background-color: white">
                                            <hr/>
                                        </li>

                                    {% elseif filho.tipo == 'LABEL' %}
                                        <li class="nav-title">{{ filho.label }}</li>

                                    {% elseif filho.tipo == 'DROPDOWN' %}
                                        <li class="nav-item nav-dropdown"
                                            style="{{ filho.cssStyle != null ? filho.cssStyle : '' }};">
                                            <a class="nav-link nav-dropdown-toggle" href="#">
                                                <i class="nav-icon {{ filho.icon }}"></i>
                                                {{ filho.label }}
                                            </a>

                                            {% if filho.filhos is defined %}
                                                <ul class="nav-dropdown-items" style="background-color: black">

                                                    {% for neto in filho.filhos %}

                                                        {% if neto.tipo == 'ENT' %}
                                                            <li class="nav-item"
                                                                style="{{ neto.cssStyle != null ? neto.cssStyle : '' }};">
                                                                <a class="nav-link"
                                                                   href="{{ neto.url is defined ? neto.url : '' }}">
                                                                    <i class="nav-icon {{ neto.icon }}"></i>{{ neto.label }}
                                                                </a></li>

                                                        {% elseif neto.tipo == 'hr' %}
                                                            <li class="nav-item"
                                                                style="height: 10px; background-color: white">
                                                                <hr/>
                                                            </li>

                                                        {% elseif neto.tipo == 'LABEL' %}
                                                            <li class="nav-title">{{ neto.label }}</li>
                                                        {% endif %}

                                                    {% endfor %}

                                                    <li class="nav-item"
                                                        style="background-color: white; height: 1px"></li>

                                                </ul>
                                            {% endif %}

                                        </li>


                                    {% endif %}



                                {% endfor %}

                                <li class="nav-item" style="background-color: white; height: 1px"></li>

                            </ul>
                        {% endif %}

                    </li>


                {% endif %}




            {% endfor %}


        </ul>
    </nav>
    <button class="sidebar-minimizer brand-minimizer" type="button"></button>
</div>