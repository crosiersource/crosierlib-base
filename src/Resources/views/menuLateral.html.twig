<div class="sidebar">
    <nav class="sidebar-nav">
        <ul class="nav">

            {% for ent in menu %}

                {% if ent.tipo == 'ENT' %}
                    <li class="nav-item" style="{{ ent.cssStyle != null ? ent.cssStyle : '' }};">
                        <a class="nav-link" href="{{ ent.program.url is defined ? ent.program.url : '' }}">
                            <i class="nav-icon {{ ent.icon }}"></i>{{ ent.label }}</a></li>
                {% elseif ent.tipo == 'hr' %}
                    <li class="nav-item" style="height: 10px; background-color: white">
                    <hr/>
                    </li>
                {% else %}
                    <li class="nav-item nav-dropdown" style="{{ ent.cssStyle != null ? ent.cssStyle : '' }};">
                        <a class="nav-link nav-dropdown-toggle" href="#">
                            <i class="nav-icon {{ ent.icon }}"></i>
                            {{ ent.label }}
                        </a>

                        {% if ent.filhos is defined %}
                            <ul class="nav-dropdown-items" style="background-color: black">
                                {% for filho in ent.filhos %}
                                    {% if filho.tipo == 'ENT' %}
                                        <li class="nav-item"
                                            style="{{ filho.cssStyle != null ? filho.cssStyle : '' }};">
                                            <a class="nav-link"
                                               href="{{ filho.program.url is defined ? filho.program.url : '' }}">
                                                <i class="nav-icon {{ filho.icon }}"></i>{{ filho.label }}</a></li>
                                    {% else %}
                                        <li class="nav-title">{{ filho.label }}</li>
                                    {% endif %}
                                {% endfor %}
                                <li class="nav-item" style="background-color: white; height: 1px"></li>
                            </ul>
                        {% endif %}

                    </li>

                {% endif %}




            {% endfor %}


        </ul>
    </nav>
    <button class="sidebar-minimizer brand-minimizer" type="button"></button>
</div>